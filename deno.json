    "hono/logger": "npm:hono@4.6.3/logger",
    "hono/secure-headers": "npm:hono@4.6.3/secure-headers",
    "hono/jsx": "npm:hono@4.6.3/jsx",
    "hono/jsx/jsx-runtime": "npm:hono@4.6.3/jsx/jsx-runtime",
    "@db/sqlite": "jsr:@db/sqlite@0.12",
